<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtest1"
    tools:context=".MealsOptionsMenu">

    <TextView
        android:id="@+id/MenuOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bright_color_text_for_dark_background"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/MenuOptions"

        />
    <LinearLayout
        android:id="@+id/GenerateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/MenuOptions"
        >
        <Button
            android:id="@+id/GenerateNewMenuButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_menu_button"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/GenerateNewMenuButton"
            />


    </LinearLayout>



    <Button
        android:id="@+id/Explanation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/main_menu_button"
        android:layout_margin="5dp"
        android:layout_below="@+id/GenerateLayout"
        android:text="@string/Explanation_button"
        />
    <Button
        android:id="@+id/GoBackToMenuPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/main_menu_button"
        android:layout_margin="5dp"
        android:layout_below="@+id/Explanation_button"
        android:text="@string/GoBackToMenuPage"
        />

</RelativeLayout>





