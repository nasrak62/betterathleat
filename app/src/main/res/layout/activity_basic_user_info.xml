<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtest1"

    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".BasicUserInfo"

        >


        <TextView
            android:id="@+id/BasicUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_for_login_background"
            android:text="@string/BasicUserInfo"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Question0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_for_login_background"
            android:padding="8dp"
            android:text="@string/Question0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BasicUserInfo" />

        <EditText
            android:id="@+id/Fill_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="Name"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_for_login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/Question0"
            app:layout_constraintTop_toBottomOf="@+id/BasicUserInfo" />

        <TextView
            android:id="@+id/Question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/Question1"
            android:background="@drawable/button_for_login_background"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Question0" />

        <EditText
            android:id="@+id/FillAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Number (10-119)"
            android:inputType="number"
            android:text="@string/Fill_Age"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_for_login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/Question1"
            app:layout_constraintTop_toBottomOf="@+id/Question0" />


        <TextView
            android:id="@+id/Question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/Question2"
            android:background="@drawable/button_for_login_background"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Question1"/>

        <RadioGroup

            android:id="@+id/radioGroupWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_for_login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Question2">

            <RadioButton
                android:id="@+id/Lb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lb" />

            <RadioButton
                android:id="@+id/Kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Kg" />


        </RadioGroup>


        <EditText
            android:id="@+id/Fill_Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Weight"
            android:inputType="numberDecimal"
            android:text="@string/Fill_Weight"
            android:padding="8dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_for_login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/radioGroupWeight"
            app:layout_constraintTop_toBottomOf="@+id/Question2"
             />

        <TextView
            android:id="@+id/Question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/Question3"
            android:background="@drawable/button_for_login_background"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupWeight" />

        <RadioGroup

            android:id="@+id/radioGroupHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_for_login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Question3">

            <RadioButton
                android:id="@+id/Ft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ft" />

            <RadioButton
                android:id="@+id/Cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Cm" />


        </RadioGroup>

        <EditText
            android:id="@+id/Fill_Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Height"
            android:inputType="numberDecimal"
            android:text="@string/Fill_Height"
            android:padding="8dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_for_login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/radioGroupHeight"
            app:layout_constraintTop_toBottomOf="@+id/Question3" />


        <ImageButton
            android:id="@+id/Finish_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:background="@drawable/bright_color_text_for_dark_background"
            android:text="@string/Finish_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fill_Height"
            app:layout_constraintVertical_bias="0.95"
            app:srcCompat="@drawable/thumbs_up_all_might" />










    </androidx.constraintlayout.widget.ConstraintLayout>










</ScrollView>
